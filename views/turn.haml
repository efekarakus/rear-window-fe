        %script(src="/turn.js")
    %body
        .section
            .container
                .level
                    .level-item.has-text-centered
                        %div
                            .heading
                                Game
                            .title= @player.game_id
                            %input#game-id{type: "text", value: "#{@player.game_id}", style: "display:none;" }

                    .level-item.has-text-centered
                        %div
                            .heading
                                Player
                            .title= @player.name       
                    .level-item.has-text-centered
                        %div
                            .heading
                                Time Left
                            .title= @player.name      
                    .level-item.has-text-centered
                        %div
                            .heading
                                Points
                            .title#points= @player.points                                                                                 
                                   
        .section.top-section
            .container
                .columns.is-centered
                    .column.is-6
                        %center
                            .rear_window_img
                                %img{src: @player.current_image, style:"max-height:600px; border: 5px white;"}
                    .column.is-4
                        %h1.title Detective Toolbox
                        %p.subtitle select the emoji that are in this photo
                        .emojis{style: "font-size:4rem;"}
                            - @player.choice_emojis.each_with_index do |moji, index|
                                %span.moji=moji
                        .next-image  
                            %button.button.is-info.is-outlined.is-large#next-turn-button{ type: 'submit' }
